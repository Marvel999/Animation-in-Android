<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PhysicsBasedAnimation">

    <ImageView
        android:id="@+id/android_bot"
        android:layout_width="@dimen/chain_android_bot_size"
        android:layout_height="@dimen/chain_android_bot_size"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/avater"/>

    <ImageView
        android:id="@+id/android_bot1"
        android:layout_width="@dimen/chain_android_bot1_size"
        android:layout_height="@dimen/chain_android_bot1_size"
        android:layout_marginTop="@dimen/android_bot_vertical_spacing"
        app:layout_constraintStart_toStartOf="@+id/android_bot"
        app:layout_constraintTop_toBottomOf="@+id/android_bot"
        app:layout_constraintEnd_toEndOf="@+id/android_bot"
        android:src="@drawable/avater"/>

    <ImageView
        android:id="@+id/android_bot2"
        android:layout_width="@dimen/chain_android_bot2_size"
        android:layout_height="@dimen/chain_android_bot2_size"
        android:layout_marginTop="@dimen/android_bot_vertical_spacing"
        android:src="@drawable/avater"
        app:layout_constraintStart_toStartOf="@+id/android_bot1"
        app:layout_constraintTop_toBottomOf="@+id/android_bot1"
        app:layout_constraintEnd_toEndOf="@+id/android_bot1" />

</androidx.constraintlayout.widget.ConstraintLayout>